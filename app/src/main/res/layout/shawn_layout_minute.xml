<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:paddingEnd="50dp"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/reMinutePrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/shawn_bg_corner_normal"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/tvAddr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_5"/>

        <TextView
            android:id="@+id/tvRain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAddr"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_5"/>

        <LinearLayout
            android:id="@+id/llContainerMinute"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/tvRain"
            android:orientation="horizontal"/>

        <ImageView
            android:id="@+id/ivMinuteClose"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/shawn_icon_close"/>

    </RelativeLayout>

</RelativeLayout>